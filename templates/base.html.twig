<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} {{title}} {% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="{{ asset('styles/general.css') }}" rel="stylesheet" type="text/css" />
        <meta name="viewport" content="width=device-width, initial-scale=1" />
        <link href="{{ asset('styles/mobile.css') }}" rel="stylesheet" type="text/css" />


    </head>
    <body>
        <header>
            
            {% block header %} 
                <nav> 
                    <ul class="navbar">
                        {% block nav %}
                            <li><a href="{{ path('app_index') }}">Acceuil</a></li><br>
                        {% if (is_granted('IS_AUTHENTICATED_FULLY')) %}
                            {{ app.user.email }}
                            <li><a href=" {{ path('app_logout') }}">Déconnexion</a></li><br>
                        {% else %}
                            <li><a href=" {{ path('app_login') }}">Connexion</a></li><br>
                        {% endif %}
                    </ul>
                </nav>
                {% endblock %}
            {% endblock %}

        </header>
        {% block popup %}
            {% if popup is defined and popup != null %}
                <div class ="popup">
                    <p class="popup-text">{{ popup }}</p>
                </div>
            {% endif %}
        {% endblock %}
        <main>
            {% block main %}{% endblock %}
        </main>
        
        <footer>
            {{ block("footer", "footer.html.twig") }}
        </footer>
        

    </body>

</html>
