<!DOCTYPE html>
<html>
    <head>
        <meta charset="UTF-8">
        <title>{% block title %} {{title}} {% endblock %}</title>
        <link rel="icon" href="data:image/svg+xml,<svg xmlns=%22http://www.w3.org/2000/svg%22 viewBox=%220 0 128 128%22><text y=%221.2em%22 font-size=%2296%22>⚫️</text></svg>">
        <link href="{{ asset('styles/general.css') }}" rel="stylesheet" type="text/css" />
    </head>
    <body>
        <header>
            
            {% block header %} 
                <nav> Navigation </nav>
                    {% block nav %}
                        <a href="{{ path('app_index') }}">Acceuil</a><br>
                    {% if (is_granted('IS_AUTHENTICATED_FULLY')) %}
                        {{ app.user.email }}
                        <a href=" {{ path('app_logout') }}">Déconnexion</a><br>
                    {% else %}
                        <a href=" {{ path('app_login') }}">Connexion</a><br>
                    {% endif %}

                {% endblock %}
            {% endblock %}

        </header>
        {% block popup %}
            {% if popup is defined and popup != null %}
                <div class ="popup">
                    <p class="popup-text">{{ popup }}</p>
                </div>
            {% endif %}
        {% endblock %}
        <main>
            {% block main %}{% endblock %}
        </main>
        
        <footer>
        {% block footer %}{% endblock %}
        </footer>
        

    </body>

</html>
