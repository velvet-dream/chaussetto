{% extends 'base.html.twig' %}

{% block main %}
    <h2>Informations personnelles</h2>
    <div class="card">
      <h3>Mon compte</h3>
      <ul>
        <li>{{ customer.name }}</li>
        <li>{{ customer.lastName }}</li>
        <li>{{ customer.email }}</li>
      </ul>
      <hr>
      <div class="card-controls">
        <a href="">Mettre à Jour</a>
      </div>
    </div>
    <div class="card">
      <h3>Mon adresse</h3>
      <ul>
        <li>{{ customer.adress.line1 }}</li>
        <li>{{ customer.adress.line2 }}</li>
        <li>{{ customer.adress.city }}</li>
        <li>{{ customer.adress.postCode }}</li>
        <li>{{ customer.adress.country }}</li>
      </ul>
      <hr>
      <div class="card-controls">
        <a href="">Mettre à Jour</a>
      </div>
    </div>
    <a href=" {{ path('app_customer_dashboard') }}">Retour</a><br>
{% endblock %}
