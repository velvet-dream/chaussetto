{% extends 'base.html.twig' %}

{% block title %}
    {{ title }}
{% endblock %}

{% block main %}
    <div>
        {% if error %}
            <div class='error'>
                {{ error.messageKey|trans(error.messageData, 'security') }}
            </div>
        {% endif %}
        <br>
        <form class="formulaire" action={{path('app_login')}} method='POST'>

            <div class="form_email">
            <label for='email'> Email </label>
            <input type='email' id='email' name='_username' value='{{ email }}'>
            </div>

            <div class="form_mdp">
            <label for='password'> Pwd </label>
            <input type='password' id='password' name='_password'>
            </div>

            <div class="form_submit">
            {# redirection vers une route valide #}
            {# <input type='hidden' name='_target_path' value='{{ path('app_customer_dashboard') }}'> #}
            <input type='hidden' name='_csrf_token' value="{{ csrf_token('authenticate') }}">

            <button type='submit'> Login </button>
            </div>




        </form><br>
    </div>

{% endblock %}
