{% extends 'base.html.twig' %}

{% block title %}Hello ProduitController!{% endblock %}

{% block main %}
    <div class="example-wrapper">
        {% for product in products %}
            <p>
                <b>Nom :</b> {{ product.name }}, <b>Prix :</b> {{ product.price }},
                <a href="{{ path('app_detail', {'id': product.id}) }}">Voir les détails</a>
                
                {% for category in product.categories %}
                    <b>Catégorie :</b> {{ category.label }}
                {% endfor %}

                {% for image in product.images %}
                    <ul>
                        <li><img src="{{ asset('../assets/img/web/' ~ image.name) }}" alt="Image du produit"></li>
                    </ul>
                {% endfor %}
            </p>
        {% endfor %}
    </div>
{% endblock %}
 