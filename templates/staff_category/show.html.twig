{% endblock %}

{% block main %}
<section class="emplacement">
<div class="info_page_categ">
		<h2 class="title_categ">
		{{ title }}
		</h2>
		<hr class="info_categ_hr">
	</div>

		<tr>
			<td>
				Catégorie :
				{{ category.label}}
			</td><br>
			<td>
				Description :
				{{ category.description}}
			</td><br>

			<td>
				Active :
				{{ category.active}}
			</td>
			<td>
				Date d'ajout de la catégorie :
				{{ category.dateAdd|format_datetime}}   
			</td><br>

			{# <td>
				Position de la catégorie :
				{{ category.positionning}}
			</td><br> #}
			{# <td>
				Position de la catégorie :
