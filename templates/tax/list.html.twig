{% extends 'admin/dashboard.html.twig' %}

{% block title %}
	{{ title }}
{% endblock %}

{% block additionalStyles %}
	<link href="{{ asset('styles/back-office/tax.css') }}" rel="stylesheet"/>
{% endblock %}

{% block main %}
<section class="emplacement">
<div class="info_page_tax">
		<h2 class="title_tax">
		{{ title }}
	</h2>
	<hr class="info_hr">
		</div>

    {% if is_granted('ROLE_ADMIN') %}
	    <div class="bouton_ajout">
    	<h3>
		<a href=" {{ path('app_tax')}}"> Créer une nouvelle taxe </a>
		</h3>
		</div>
    {% endif %}

    <table>
        <tr>
            Taxe : 
            {% if (triName == 'desc') %}
				<a href=" {{ path('app_list_tax' ) }}?label={{ label }}&triName=asc">></a>
			{% else %}
				<a href=" {{ path('app_list_tax' ) }}?label={{ label }}&triName=desc"><</a>
			{% endif %}
        </tr>

        {% for taxes in tax %}
        <tr>
			<td>
				Catégorie : {{ taxes.label}}
			</td>
			<td>
				{# <a href=" {{ path('app_show_category', {'id' : item.id}) }}">Voir</a>  #}
				{# <a href=" {{ path('app_update_category', {'id' : item.id}) }}">Mettre à jour</a>  #}
				{# <a href=" {{ path('app_update_category', {'id' : item.id}) }}">Supprimer</a>  #}

			</td>
		</tr>
		{% else %}
		<tr>
            <td>Aucune taxe enregistée </td>
        </tr>
    	{% endfor %}

	</table>
</section>







{% endblock %}